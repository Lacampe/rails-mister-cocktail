<div class="text-center">
  <h1>Add a new ingredient</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.input :ingredient_id, collection: Ingredient.all.sort { |a,b| a.name.downcase <=> b.name.downcase } %>
        <%= f.submit "Add ingredient", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
